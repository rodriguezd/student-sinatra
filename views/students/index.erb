
    <ul>
    <% @students.each do |student| %>
      <li class="home-blog-post">
                <div class="blog-thumb">
                  <a href="students/<%= student.name%>"><img width="360" height="140" src="/img/<%=student.id%>.jpg" class="attachment-blog-thumb wp-post-image" alt=""></a>
                </div>

                <div class="blog-title">
                  <div class="big-comment"><h3><a href="students/<%= student.name%>"><%= student.name%>
                 </a></h3></div>
                  <!-- <p class="home-blog-post-meta"><%= student.tagline %></p> -->
                </div>
                <div class="clear"></div>

                <div class="excerpt">
                  <p><%= student.bio %></p>
                </div>
                <div class="clear"></div>
              </li>
    <% end %>
  </ul>
